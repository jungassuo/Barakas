@model RoomDto

<form asp-action="RoomDelete">
    <br />
    <div class="container border p-3">
        <input asp-for="RoomId" hidden/>
        <h1 class="text-black text-center">Delete Room</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Condition</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Condition" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Free beds amount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="FreeBedsAmmount" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Room name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>


            <div class="col-5 offset-2">

                <a asp-action="RoomIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>